<p id="notice"><%= notice %></p>

<h1>Individuals</h1>

<table>
  <thead>
    <tr>
      <th>Name last</th>
      <th>Name first</th>
      <th>Name middle</th>
      <th>Name maiden</th>
      <th>Name familiar</th>
      <th>Gender</th>
      <th>Date birth</th>
      <th>Date death</th>
      <th>Place birth</th>
      <th>Cause death</th>
      <th>Misc notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @individuals.each do |individual| %>
      <tr>
        <td><%= individual.name_last %></td>
        <td><%= individual.name_first %></td>
        <td><%= individual.name_middle %></td>
        <td><%= individual.name_maiden %></td>
        <td><%= individual.name_familiar %></td>
        <td><%= individual.gender %></td>
        <td><%= individual.date_birth %></td>
        <td><%= individual.date_death %></td>
        <td><%= individual.place_birth %></td>
        <td><%= individual.cause_death %></td>
        <td><%= individual.misc_notes %></td>
        <td><%= link_to 'Show', individual %></td>
        <td><%= link_to 'Edit', edit_individual_path(individual) %></td>
        <td><%= link_to 'Destroy', individual, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

